<% layout("/layouts/boilerplate") %>
    <!-- <h2>All Listings</h2> -->
    <div class="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>AmazingPools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="tax-toggle ">
        <div class="form-check form-switch form-check-reverse text-toggle">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Total including taxes</label>
        </div>
      </div>
    </div>

    <% if(allList) {%>
        <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let list of allList) { %>

                <a href="/listings/<%=list._id%>" class="ind">
                    <div class="card" >
                       <div class="li-img"> <img src="<%=list.image.url%>" class="card-img-top" id="im" alt="list_images"  style="height: 18rem;" ></div>
                        <div class="card-body">
                          <p class="card-text"><div class="list-title"><%= list.title %></div><br>
                          <div class="card-price"> &#8377;<%= list.price%> /night <i class="tax-info">&nbsp; &nbsp;+18% GST</i></div></p>
                          
                        </div>
                      </div>
                </a>
        
                <% } %>
        </div>

 <% } %>

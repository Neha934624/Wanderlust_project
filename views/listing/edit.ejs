<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <h2>EDIT YOUR LISTING</h2>
    <form action="/listings/<%=editList._id%>?_method=PUT"  method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3"><label for="" class="form-label">Title</label>
        <input type="text" value="<%=editList.title %>" name="title"  class="form-control" required>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Invalid Title
          </div>
    </div>
       
        <div class="mb-3">
            <label for="" class="form-label">Description</label>
        <textarea name="description" id=""  class="form-control"><%=editList.description %> required required </textarea>
        <div class="invalid-feedback">
            Invalid Description.
          </div>
    </div>
    <label for="" class="form-label">Existing Image</label>
    <div class="mb-3">
        
        <img src="<%=editList.image.url%>" alt="" height="200px" width="250px">
    </div>
        
        <div class="mb-3">
            <label for="" class="form-label">Image URL</label>
        <input type="file" value="<%=editList.image.url%>" name="image"  class="form-control">
        <div class="invalid-feedback">
               Enter correct url 
        </div>
    </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="" class="form-label">Price</label>
                <input type="text" value="<%=editList.price %>" name="price"  class="form-control" required>
                <div class="invalid-feedback">
                    Price in Invalid
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="" class="form-label">Country</label>
                <input type="text" value="<%=editList.country %>" name="country"  class="form-control" required>
                <div class="invalid-feedback">
                    Enter a valid Country name
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Location</label>
        <input type="text" value="<%=editList.location %>" name="location"  class="form-control" required>
        <div class="invalid-feedback">
            Enter a valid location
          </div></div>
    </div>
        <button class="btn btn-danger">EDIT</button>

    </form>
    </div>
</body>